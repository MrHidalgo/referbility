// SECTION board details :: START

section#board-details.board-details

  .board-details__heading.board-details__heading--relative
    .board-details__head
      .board-details__head-left

        .board-details__logo
          img(posting-confidential-logo-js data-logo='img/nocompanylogo.png' data-name='img/engie-logo.png' src="img/engie-logo.png" alt="")

      .board-details__head-middle
        .board-card__block-badge-wrapper(review-badge-js)
          .board-card__block-badge
            i.icon-font.icon-bell-alert
            p Urgent

        p.board-details__title(review-job-title-js) Chief Financial Officer Thermal Power Plant
        p.board-details__subtitle(posting-confidential-company-js data-confidential='CONFIDENTIAL COMPANY' data-name='Engie') Engie
        ul.board-card__block-list
          li.board-card__block-list-item
            div
              i.icon-font.icon-pin
            div
              p!= "<span review-city-js>Saudi Arabia</span>, <span review-country-js>Riyadh</span>"
          li.board-card__block-list-item
            div
              i.icon-font.icon-wallet
            div
              p(posting-negotiable-wallet-js data-negotiable='Negotiable' data-name='SAR 50,000 to SAR 55,000 per month')
                != "<span review-currency-js>SAR</span> <span review-currency-from-js>50,000</span> to <span review-currency-js>SAR</span> <span review-currency-to-js>55,000</span> per month"

      .board-details__head-right

  .board-details__body
    .board-details__list
      li
        div
          p Experience:
        div
          span
            i(posting-review-experience-from-js) 1
            i!= " - "
            i(posting-review-experience-to-js) 30
      li
        div
          p Industry:
        div
          .board-details__industry(review-industry-js)
            i Energy and Power
      li
        div
          p Degree:
        div
          span(review-degree-js) Bachelor
      li
        div
          p Job type:
        div
          span(review-job-type-js) Full-time (unlimited)
      li
        div
          p Career level:
        div
          span(review-career-level-js) C Level
      li
        div
          p Languages:
        div
          span(review-languages-js) English
      li
        div
          p Skills required:
        div
          .board-details__skills(review-skills-js)
            i Budgetting
            i Finance
            i Corporate Finance


    .board-details__info
      div
        p Job Description
        span(review-job-description-js)
      div(style='display: none;' review-additional-requirements-wrap-js)
        p Additional Requirements / Certifications
        span(review-additional-requirements-js)

// SECTION board details :: END
