  p.posting__title Tell us about the perfect candidate!

  .posting__form-field
    label.posting__form-label!= "Years of Experience"
    .posting__form-range
      div
        .posting__form-input
          input(type='text' name='' placeholder='1' value='1' experience-min-input-js intIntegerOnlyBox-js)
      div
        input(input type="text" class="" name="" value="" range-experience-js)
      div
        .posting__form-input
          input(type='text' name='' placeholder='30' value='30' experience-max-input-js intIntegerOnlyBox-js)

  .posting__form-field
    label.posting__form-label Industry Experience
