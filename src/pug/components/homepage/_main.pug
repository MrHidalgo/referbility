// SECTION main :: START

section#main.main(class!= (pageClassName === 'p-referrer') ? 'main--referrer':'')

  .main__bg

    .main__bg-row
      .main__bg-path(parallax-js data-stellar-ratio="1.2")

      .main__bg-shape(parallax-js data-stellar-ratio="1.2")
        img(src="img/crowdsourcing-shape-1.svg")

    .main__bg-container
      .main__bg-container-path.main__bg-container-path-1(parallax-js data-stellar-ratio="1.2")
      .main__bg-container-path.main__bg-container-path-2(parallax-js data-stellar-ratio="0.8")

  .main__wrapper
    .main__wrapper-left

      div
        if(pageClassName === 'p-referrer')
          h1.main__title Get paid for referring friends to great jobs.
          p.main__subtitle Join our network today and never miss an opportunity to refer!
        else
          h1.main__title The best candidates are passive.
          p.main__subtitle Leverage the public to have them referred directly to you by crowdsourcing.

        .main__btn-wrapper
          if(pageClassName === 'p-referrer')
            a.main__btn.c-btn.c-btn--bg.c-btn--bg-blue(href='#' title='')
              span Available Jobs
            a.main__btn.c-btn.c-btn--bg.c-btn--bg-white(href='#crowdsourcing' title='' anchor-js)
              span Learn more
          else
            a.main__btn.c-btn.c-btn--bg.c-btn--bg-blue(href='#requestDemo' title='' data-effect='mfp-zoom-in' popup-js)
              span Request a demo
            a.main__btn.c-btn.c-btn--bg.c-btn--bg-white(href='#crowdsourcing' title='' anchor-js)
              span Learn more

        .main__num
          +iconSVG('main-number', '')

    .main__wrapper-right

      if(pageClassName === 'p-referrer')
        img(src="img/img-main-1.png")
        img(src="img/main-img-path-1.png" srcset="img/main-img-path-1@2x.png 2x")
      else
        img(src="img/img-main.png")
        img(src="img/main-img-path.png" srcset="img/main-img-path@2x.png 2x")

// SECTION main :: END